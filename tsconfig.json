{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "./",
    "paths":{
      "*": ["typings/*"]
    }
  },

  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}